<% include ../partials/header %>
<% include ../partials/profilesHead %>

<% if (currentAccount != -1) { %>
<h1 class="display-1">Transaction</h1>
<hr>
<div class="container">
    <br>
    <br>
    <form class="register-box" action="/profiles/transaction" method="POST">
        <div class="form-group row">
            <label class="col-sm-4 col-form label">Transaction Type</label>
            <div class="col-sm-6">
                <select class="form-control" name="Transaction_Type">
                    <option value="Deposit">Deposit</option>
                    <option value="Withdraw">Withdraw</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form label">Transaction Amount</label>
            <div class="col-sm-6">
                <input type="dub" class="form-control" placeholder="Transaction Amount" name="Transaction_Amount">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form label">Confirm PIN</label>
            <div class="col-sm-6">
                <input type="password" class="form-control" placeholder="Confirm Password">
            </div>
        </div>
        <br>
        <button class="btn btn-primary btn-block" type="submit">Confirm Transaction</button>
    </form>
    <div>
<% }else{ %>
    <br><br><br>
    <h1 align="center"><a href="/profiles/accounts">Please Open your account before</a></h1>
<% } %>
        <% include ../partials/profilesFoot %>
        <% include ../partials/footer %>