<% include ../partials/header %>
<% include ../partials/profilesHead %>

<br><br><br>
<% if (currentAccount != -1) { %>
    <h1 class="display-2">Banking statement</h1>
    <hr>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">DD/MM/YYYY</th>
                    <th scope="col">Time</th>
                    <th scope="col">Type</th>
                    <th scope="col">Amount</th>
                </tr>
            </thead>
            <tbody>
                <% transactions.forEach(function(transaction){ %>
                    <% if (transaction.Transaction_Type === 'Deposit') { %>
                        <tr class="table-success">
                    <% } else { %>
                        <tr class="table-danger">
                    <% } %>
                    <td><%=transaction.Transaction_Timestamp.toDateString()%></td>
                    <td><%=transaction.time%></td>
                    <td><%=transaction.Transaction_Type%></td>
                    <td><%=transaction.Transaction_Amount%></td>
                </tr>
                <% }); %>
            </tbody>
        </table>




    <hr>
    <h1 class="display-2">Order stock History</h1>
    <hr>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Order No</th>
                <th scope="col">Stock Symbol</th>
                <th scope="col">Time</th>
                <th scope="col">Status</th>
                <th scope="col">Order Type</th>
                <th scope="col">Price</th>
                <th scope="col">Volume</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(function(order){ %>
                <td><%=order.Order_No%></td>
                <td><%=order.Stock_Symbol%></td>
                <td><%=order.Order_Time.toDateString()%></td>
                <% if(order.Order_Status == 'C'){ %>
                    <td class="text-danger"><%=order.Order_Status%></td>
                    <% }else{ %>
                    <td class="text-success"><%=order.Order_Status%></td>
                    <% } %>
                <% if(order.Order_Type == 'Sell'){ %>
                <td class="text-danger"><%=order.Order_Type%></td>
                <% }else{ %>
                <td class="text-success"><%=order.Order_Type%></td>
                <% } %>
                <td><%=order.Order_Price%></td>
                <td><%=order.Order_Volume%></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
<% }else{ %>
    <h1 align = "center"><a href="/profiles/accounts">Please Open your account before</a></h1>
<% } %>

<% include ../partials/profilesFoot %>
<% include ../partials/footer %>